# AETHER Project Configuration Example
# Copy this file to .ralphrc and customize

PROJECT_NAME="AETHER"
PROJECT_TYPE="research"

# Loop settings
MAX_CALLS_PER_HOUR=100
CLAUDE_TIMEOUT_MINUTES=15
CLAUDE_OUTPUT_FORMAT="json"

# Tool permissions - Research focused
ALLOWED_TOOLS="Write,Read,Edit,Bash(git *),WebSearch,WebFetch,mcp__context7__*,mcp__zai-mcp-server__*,mcp__4_5v_mcp__analyze_image"

# Session management
SESSION_CONTINUITY=true
SESSION_EXPIRY_HOURS=24

# Circuit breaker thresholds
CB_NO_PROGRESS_THRESHOLD=3
CB_SAME_ERROR_THRESHOLD=5
